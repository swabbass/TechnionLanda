<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popUpRealtive"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/pinPopUpAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingRight="4dp"
        android:paddingTop="4dp"
        android:src="@drawable/pin_icon" />

    <ImageView
        android:id="@+id/deletePopUpAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/pinPopUpAction"
        android:paddingRight="4dp"
        android:paddingTop="4dp"
        android:src="@drawable/ic_action_discard" />

    <ImageView
        android:id="@+id/unpinPopUpAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/deletePopUpAction"
        android:paddingRight="4dp"
        android:paddingTop="4dp"
        android:src="@drawable/unpin_icon" />

</RelativeLayout><!-- From: file:/C:/Users/wabbass/git/Landa1/app/src/main/res/layout/pop_up_layout.xml -->