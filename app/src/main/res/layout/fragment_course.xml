<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#404040"
    android:clickable="true"
    android:measureWithLargestChild="true"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context=".CourseFragment">

    <!-- TODO: Update blank fragment layout -->

    <ExpandableListView
        android:id="@+id/courseTeachers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/languageLable"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:childDivider="?android:attr/listDivider"
        android:divider="?android:attr/listDivider"
        android:dividerHeight="1dp"
        android:groupIndicator="@null"></ExpandableListView>

    <TextView
        android:id="@+id/languageLable"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/courseLable"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="@string/teachers"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#0082f7" />

    <ImageView
        android:id="@+id/courseAvatar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:contentDescription="Description"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/courseLable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/courseAvatar"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#0082f7" />

</RelativeLayout>